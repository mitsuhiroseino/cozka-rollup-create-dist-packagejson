{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    "removeComments": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "strictNullChecks": false,
    "types": ["jest", "node"],
    "strictPropertyInitialization": false,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["src/__test__"]
}
